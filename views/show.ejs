<% include partials/header.ejs %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
        <p class="lead"> YelpCamp</p >
            <div class="list-group">
                <a href="" class="list-group-item active">Category 1</a>
                <a href="" class="list-group-item">Category 2</a>
                <a href="" class="list-group-item">Category 3</a>
                <a href="" class="list-group-item">Category 4</a>
            </div>
        </div>
        <div class="col-md-9">
            <div id="showThumb" class="thumbnail">
               <img id="showImg" class="image-responsive" src="<%= campground.image %>" alt="image">
               <div id="showCont" class="caption-full">
                    <h5 class="pull-right">$9.45 per/Night</h5>
                  
                    <h3 ><a href=""><%= campground.name %></a>  </h3>
                    
                    <p> <%= campground.description %> </p>
                    <p><em>Submitted By : <%= campground.creater.username %></em></p>
               </div>
            </div>
            <div class="well">
                 <a href="/campgrounds/<%= campground._id %>/comments/new"><button type="button" class="btn btn-success">Add Review</button></a>
                 <h4>Reviews :  </h4>
                 
                <% campground.comment.forEach( comment=>{ %>
                <div>
                    <strong><div><%= comment.author.username%></div></strong>
                    <div class="thumbnail">
                        <%= comment.text %>
                    </div>
                    
                </div>
                <% } ) %>
                    
            </div>

        </div>
    </div>
</div>











